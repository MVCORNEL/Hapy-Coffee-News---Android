<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="user_category"
        android:title="USER"/>

    <EditTextPreference
        android:dialogTitle="Your Name"
        android:dialogMessage="Enter your full name"
        android:inputType="textCapWords"
        android:title="Name"
        android:key="key_full_name"
        android:summary="Manea Valentin"/>



    <PreferenceCategory
        android:title="CATEGORY"/>


    <ListPreference
        android:key="language_list"
        android:title="Language "
        android:entries="@array/CountryEntry"
        android:entryValues="@array/CountryValue"
        android:summary="Choose your country"/>


    <ListPreference
        android:key="category_list"
        android:title="Category"
        android:entries="@array/CategoryEntry"
        android:entryValues="@array/CategoryValue"
        android:summary="Choose your category"/>








</PreferenceScreen>